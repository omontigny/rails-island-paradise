<div class="container_home">
  <div class="row">
    <div class="col-lg-8 col-md-6 col-sm-12">
      <h1>All islands</h1>
      <div class = "d-flex flex-wrap">
        <% @islands.each do | island | %>
        <%= link_to island_path(island) do %>
        <div class="card-index-island">

          <%= cl_image_tag island.picture.key  %>
          <!-- <img src="https://source.unsplash.com/featured/?island,paradise" /> -->

          <div class="card-index-island-infos">
            <div>
              <h2> <%= island.name %> - <%= island.id %></h2>
              <p> description</p>
            </div>
            <h2 class="card-trip-pricing">price</h2>

            <%= cl_image_tag island.owner.avatar.key, class: "card-index-island-user avatar-bordered"  %>
            <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-index-island-user avatar-bordered" /> -->

          </div>

        </div>
<% end %>
        <% end %>
        <%# ------ %>
      </div>
    </div>
    <div class="col-lg-4 col-md-6">
      <h1>Map</h1>
