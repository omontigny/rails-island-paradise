        <div class="card-index-island-infos">
          <div>
            <h2> <%= island.name %></h2>
            <p><%= island.ocean %></p>
            <p><%= island.country %></p>
            <%# <%= link_to "More info", island_path %>
          </div>

            <h2 class="card-index-island-capacity fas fa-user-friends"> <%=  island.capacity %></h2>
          <h2 class="card-trip-pricing"><%= island.price_per_day %> $ / night </h2>
          <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-index-island-user avatar-bordered" /> -->
        </div>
      </div>
      <% end %>
      <% end %>
