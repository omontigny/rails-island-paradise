<div class="container_home">
      <h1>Choose your islands</h1>
  <div class="row">

      <%= link_to island_path(island) do %>
      <% @islands.each do | island | %>
      <%# <div><% link_to island_path, class="card-index-island" %>
        <div class="card-index-island">
        <%= cl_image_tag island.picture.key %>
        <%# <img src="./assets/images/layout/palm-tree-2.svg" alt="" style="height:20px; width:20px;"> %>
        <%= image_tag "layout/palm-tree-2.svg", class:"favori-index-island button" %>
